<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.SplashFragment"
    android:background="#35BCCB">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmin"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdmin"
        android:textAllCaps="false"
        android:text="Admin"
        style="@style/myMaterialButton003233"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/btnUser"
        app:cornerRadius="28dp"
        android:textColor="@color/white"
        android:layout_marginTop="23dp"
        />


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUser"
        android:textAllCaps="false"
        android:text="User"
        style="@style/myMaterialButtonwhite"
        android:paddingVertical="15dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="28dp"
        android:textColor="#35BCCB"
        android:layout_marginTop="23dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>