<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.userprofile.UserProfileFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_join_associations_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            app:navigationIcon="@drawable/arrow_back"
            app:title="Join Association"
            app:titleCentered="true"
            app:titleTextColor="#000000"/>

        <ImageView
            android:id="@+id/iv_user_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/circular_user_picture"/>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#003233"
            android:textSize="20sp"
            tools:text="Username" />

        <TextView
            android:id="@+id/tv_association_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingStart="13dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/admin_dashboard_card_background"
            android:text="Association name" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Number in association" />

        <TextView
            android:id="@+id/tv_user_number"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:text="5" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="ID number" />

        <TextView
            android:id="@+id/tv_user_id_number"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            tools:text="×××××××××××××××" />

        <TextView
            android:id="@+id/tv_user_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Birth date" />

        <TextView
            android:id="@+id/tv_user_birth_date"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="14 Nov 1982" />

        <TextView
            android:id="@+id/tv_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Nationality" />

        <TextView
            android:id="@+id/tv_user_nationality"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="Egyptian" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Address" />

        <TextView
            android:id="@+id/tv_user_address"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="City …, St 15.. ," />

        <TextView
            android:id="@+id/tv_home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Home address" />

        <TextView
            android:id="@+id/tv_user_home_address"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="City …, St 15.. ," />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Phone number" />

        <TextView
            android:id="@+id/tv_user_phone_number"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="×××××××××" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="Email" />

        <TextView
            android:id="@+id/tv_user_email"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            tools:text="username@email.com" />

        <TextView
            android:id="@+id/tv_id_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="ID front" />

        <TextView
            android:id="@+id/tv_user_id_front"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="id front 12316.png" />

        <TextView
            android:id="@+id/tv_id_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="#BEBEBE"
            android:textSize="11sp"
            android:text="ID back" />

        <TextView
            android:id="@+id/tv_user_id_back"
            style="@style/TextView.profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="11dp"
            android:textSize="15sp"
            android:text="id back 12316.png" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                style="@style/myMaterialButton35BCCB"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12.5dp"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_refuse"
                style="@style/refuseButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="13dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12.5dp"
                android:text="Refuse"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="5dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>